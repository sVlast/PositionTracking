@model SignUpModel
@{
    ViewData["Title"] = "Sign up";
 }


<div class="container-fluid container-form">
    <form method="post" asp-controller="Account" asp-action="SignUp" asp-antiforgery="true" asp-route-returnurl="@Model.ReturnUrl">
        <div class="form-group">
            <label asp-for="Email"></label>
            @if (Model.Email != null)
            {
                <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)" readonly />
            }
            else
            {
                <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)" />
            }
            @*<input name="Email" value="@Model.Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)" @if (Model.Email != null) {<text>readonly</text>} />*@

            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="@Html.DisplayNameFor(m => m.ConfirmPassword)" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Token" />
        <span asp-validation-for="Token" class="text-danger"></span>
        <button type="submit" class="btn btn-primary">SIGN UP</button>

    </form>
</div>