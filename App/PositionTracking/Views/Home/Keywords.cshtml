@model KeywordsViewModel
@using PositionTracking.Data
@using PositionTracking.Extensions
@{

    Layout = "_ProjectLayout";
    ViewData["Title"] = _dictionary.Translate("Keywords", PositionTracking.Data.Languages.hr);;

}
@inject LanguageDictionary _dictionary


<input id="getRankUrl" type="hidden" value="@Model.GetRankUrl" />

<!-- u app setingsu definirat refresh URL

    settings prosljedit u kontroler preko dependecy injection,(iconfiguration)
    iuconfiguration(interface koji predstavlja appsettings file)

    uzimamo propertye iz settingsa

    kako preko jquerya procitat tu vrijednost iz htmla i zaljepoit u ajax -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@_dictionary.Translate("Add Keyword", PositionTracking.Data.Languages.hr)</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Home" asp-action="AddKeyword">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">@_dictionary.Translate("Keyword", PositionTracking.Data.Languages.hr)</label>
                        <input type="text" class="form-control" name="Value">
                    </div>
                    <div class="form-group">
                        <label for="languageFormControlSelect">@_dictionary.Translate("Language", PositionTracking.Data.Languages.hr)</label>
                        <select class="form-control" name="Language">
                            @foreach (var language in Enum.GetValues<Languages>())
                            {
                                <option value="@language">@language.GetDisplayName()</option>
                            }
                        </select>

                    </div>
                    <div class="form-group">
                        <label for="locationFormControlSelect">@_dictionary.Translate("Location", PositionTracking.Data.Languages.hr):</label>
                        <select class="form-control" name="Location">
                            @foreach (var country in Enum.GetValues<Countries>())
                            {
                                <option value="@country">@country.GetDisplayName()</option>
                            }
                        </select>
                    </div>

                    <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@_dictionary.Translate("Close", PositionTracking.Data.Languages.hr)</button>
                    <button type="submit" class="btn btn-primary">@_dictionary.Translate("Add Keyword", PositionTracking.Data.Languages.hr)</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-right">
    <button id="addKeyword" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        @_dictionary.Translate("Add Keyword", PositionTracking.Data.Languages.hr)
    </button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">@_dictionary.Translate("Keyword", PositionTracking.Data.Languages.hr)</th>
            <th scope="col">@_dictionary.Translate("Language-Location", PositionTracking.Data.Languages.hr)</th>
            <th scope="col">@_dictionary.Translate("Rating", PositionTracking.Data.Languages.hr)</th>
            <th> </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var keyword in Model.Keywords)
        {
        <tr>
            <td>
                <a asp-controller="Home"
                   asp-action="KeywordDetail"
                   asp-route-id="@keyword.Id">@keyword.Value</a>
            </td>
            <td>@keyword.LanguageLocation</td>
            <td>#@keyword.Rating</td>
            <td>
                <button type="button" class="btn btn-outline-dark btn-refresh btn-spinner" data-id="@keyword.Id">
                    <span class="spinner-icon spinner-border spinner-border-sm " role="status" aria-hidden="true"></span>
                    <span class="spinner-text">
                        @_dictionary.Translate("Refresh", PositionTracking.Data.Languages.hr)
                    </span>
                </button>
            </td>
            <td>
                <form class="form-confirm" asp-controller="Home" asp-action="DeleteKeyword">
                    <input type="hidden" value="@keyword.Id" name="Id" />
                    <button type="submit" class="btn btn-outline-danger">@_dictionary.Translate("Remove", PositionTracking.Data.Languages.hr)</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>




