@model ProjectSettingsViewModel
@{

    ViewData["Title"] = "ProjectSettings";
    Layout = "_ProjectLayout";
}
@inject LanguageDictionary _dictionary

<div class="container-fluid">

    <div class="text-center">
        <h1 class="display-4">@_dictionary.Translate("Project Settings", PositionTracking.Data.Languages.hr)</h1>
    </div>

    <br>


    <h2> @_dictionary.Translate("Project name", PositionTracking.Data.Languages.hr)</h2>
    <div class="projectName">
        <form class="form-confirm" asp-controller="Home" asp-action="EditProject">
            <input value="@Model.ProjectName" name="ProjectName" size="30" type="text" />

            <br />
            <br />

            <h2> @_dictionary.Translate("Change Domain", PositionTracking.Data.Languages.hr) </h2>
            <input value="@Model.Domain" name="Domain" size="30" type="text" /> <br />
            <br />
            <input type="hidden" value="@Model.ProjectId" name="ProjectId" />
            <button type="submit" class="btn btn-outline-primary">@_dictionary.Translate("Save", PositionTracking.Data.Languages.hr)</button>
        </form>
    </div>

    <br />
    <br />

    <div class="deleteProject">

        <h3>Deleting a project will have the following effects: ...</h3>
        <form class="form-confirm" asp-controller="Home" asp-action="DeleteProject">
            <input type="hidden" value="@Model.ProjectId" name="Id" />
            <button type="submit" class="btn btn-outline-danger">@_dictionary.Translate("Remove", PositionTracking.Data.Languages.hr)</button>
        </form>
    </div>

</div>



