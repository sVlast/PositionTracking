@inject LanguageDictionary _dictionary
@{
    Layout = "_Layout";
}


<div class="row h-100">
    <div class="col-md-3 col-lg-2">
        <div class="sidebar-container">

            <div class="sidebar-logo"> @User.Identity.Name</div>

            <nav>
                <ul class="sidebar-navigation">

                    <li></li>

                    <li @if (Model is AccountSettingsViewModel) {<text> class="active" </text>}>
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="AccountSettings">@_dictionary.Translate("Settings", PositionTracking.Data.Languages.hr)</a>
                    </li>

                </ul>
            </nav>

        </div>
    </div>

    <div class="col-md-9 col-lg-10">
        @RenderBody()
    </div>
</div>
